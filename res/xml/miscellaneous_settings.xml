<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/miscellaneous_settings_title">

    <!-- Gaming Mode -->
    <Preference
        android:fragment="com.krypton.settings.fragment.GamingModeFragment"
        android:icon="@drawable/ic_gamingmode"
        android:key="gamingmode"
        android:title="@string/gamingmode_settings_title"
        android:summary="@string/gamingmode_settings_summary" />

    <!-- Volume key music control -->
    <com.krypton.settings.preference.SettingSwitchPreference
        android:key="volume_button_music_control_switch_preference"
        android:title="@string/volume_button_music_control_title"
        android:summary="@string/volume_button_music_control_summary"
        settings:settingKey="volume_button_music_control"
        settings:settingNamespace="system" />

    <!-- Long press power for torch -->
    <com.krypton.settings.preference.SettingSwitchPreference
        android:key="power_button_torch_control_switch_preference"
        android:title="@string/power_button_torch_control_title"
        android:summary="@string/power_button_torch_control_summary"
        settings:settingKey="torch_long_press_power_gesture"
        settings:settingNamespace="system" />

    <!-- Torch timeout for power button gesture -->
    <com.krypton.settings.preference.SettingEditTextPreference
        android:key="power_button_torch_timeout_preference"
        android:title="@string/power_button_torch_timeout_title"
        android:summary="@string/power_button_torch_timeout_summary"
        android:dependency="power_button_torch_control_switch_preference"
        android:dialogTitle="@string/power_button_torch_timeout_dialog_title"
        settings:settingKey="torch_long_press_power_timeout"
        settings:settingNamespace="system" />

    <!-- Accen picker 3.0-->
    <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="rgb_accent_picker"
            android:title="@string/rgb_accent_picker_title"
            android:summary="@string/rgb_accent_picker_summary"
            android:persistent="false"
            settings:settingKey="rgb_accent_picker"
            settings:settingNamespace="system"/>
</PreferenceScreen>
